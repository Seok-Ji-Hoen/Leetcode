class Solution:
    def reverseString(self, s: List[str]) -> None:
        left , right = 0, len(s)-1
        while left<right:
            s[left] , s[right] = s[right], s[left]
            left +=1
            right -=1



##Solution 참고 및 recursion 이용
class Solution:
    def reverseString(self, s: List[str]) -> None:
        def index(left,right):
            if left<right:
                s[left], s[right] = s[right], s[left]
                index(left+1,right-1)
        index(0,len(s)-1)
